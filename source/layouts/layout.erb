<!doctype html>
<html lang="en">
<head>
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  
  <meta charset="UTF-8">
  
  <meta name="description"  content="Tax declaration? Administrative tasks? Local authorities? With Happy-go-Lucky.in you couldn't care less!">
  <meta name="keywords"     content="Germany, Berlin, Tax, VAT, Administration, Authorities, Insurance, Turnover Tax Return, Relocation">
  <meta name="author"       content="Happy-Go-Lucky.in Graf GbR">
  <meta name="viewport"     content="width=device-width, initial-scale=1, maximum-scale=1">

  <!-- Use title if it's in the page YAML frontmatter -->
  <title><%= current_page.data.title || 'Happy-Go-Lucky.in' %></title>

<!-- TODO >
  <!-- FAV AND TOUCH ICONS -->
  <link rel="icon" href="images/favicon.ico">
  <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
  <link rel="apple-touch-icon" href="images/apple-touch-icon-72x72.png"   sizes="72x72">
  <link rel="apple-touch-icon" href="images/apple-touch-icon-114x114.png" sizes="114x114">
<!-- TODO END >

  <!-- STYLESHEETS  -->
  <%= stylesheet_link_tag(
    "normalize",
    "bootstrap.min.css",                # BOOTSTRAP
    "owl.theme.css",                    # CAROUSEL
    "owl.carousel.css",                 # CAROUSEL
    "nivo-lightbox.css",                # LIGHTBOX
    "nivo_themes/default/default.css",  # LIGHTBOX
    "animate.min.css",                  # ANIMATIONS
    "styles.css",                       # CUSTOM STYLESHEETS
    "colors/blue.css",                  # DEFAULT COLOR/ CURRENTLY USING
    # "colors/green.css",                 # ALTERNATIVE COLOR
    # "colors/purple.css",                # ALTERNATIVE COLOR
    # "colors/orange.css",                # ALTERNATIVE COLOR
    # "colors/blue-munsell.css",          # ALTERNATIVE COLOR
    # "colors/slate.css",                 # ALTERNATIVE COLOR
    # "colors/yellow.css",                # ALTERNATIVE COLOR
    "responsive.css",                   # RESPONSIVE FIXES
    "elegant-icons-style",              # FONT ICONS
    ) %>

  <!-- WEB FONTS -->
  <link href='http://fonts.googleapis.com/css?family=Roboto:100,300,100italic,400,300italic' rel='stylesheet' type='text/css'>

  <!-- SCRIPTS -->
  <!--[if lte IE 7]>
    <script src="javascripts/lte-ie7.js" type="text/javascript></script>
  <![endif]-->
  <!--[if lt IE 9]>
      <script src="javascripts/html5shiv.js" type="text/javascript"></script>
      <script src="javascripts/respond.min.js" type="text/javascript"></script>
  <![endif]-->

  <%= javascript_include_tag "all" %>
</head>

<body>
  <!-- PRE LOADER -->
  <div class="preloader">
    <div class="status">&nbsp;</div>
  </div>

  <header class="header" id="home">
    <%= partial 'header' %>
  </header>

  <%= yield %>
  
  <footer class="footer" id="contact">
    <%= partial 'footer' %>
  </footer>
</body>
</html>